    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Simple form submission handler (would be connected to your booking system)
        document.querySelectorAll('.cta-button').forEach(button => {
            if(button.getAttribute('href') === '#contact') {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    // In a real implementation, this would open a booking modal or redirect to a booking page
                    alert("Thank you for your interest! This would redirect to your booking system in a live implementation.");
                });
            }
        });
    </script>
